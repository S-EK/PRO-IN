<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"
            android:text="09:00"
            android:textAlignment="center"
            android:textColor="#434343"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/ampmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="AM"
            android:textAlignment="center"
            android:textColor="#434343"
            android:textSize="46sp" />

    </LinearLayout>

    <Button
        android:id="@+id/changeAlarmTimeButton"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_rd"
        android:backgroundTint="@color/korea_c"
        android:text="SET ALARM"
        android:textColor="#FFFFFF"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/onOffButton"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_rd_eng"
        android:backgroundTint="@color/korea_c"
        android:text="SELECT TIME"
        android:textColor="#FFFFFF"
        android:textSize="17sp"/>

</LinearLayout>